# Bertrand Brands - Environment Variables
# Copy this file to .env.local and fill in the values

# ======================
# REQUIRED: Database
# ======================
# Vercel Postgres connection string
# Get this from Vercel Dashboard > Storage > Postgres > .env.local tab
POSTGRES_URL="postgres://..."

# ======================
# REQUIRED: Email (Resend)
# ======================
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY="re_..."

# From email address (must be verified in Resend)
# Format: "Name <email@domain.com>"
RESEND_FROM_EMAIL="Bertrand Brands <hello@bertrandbrands.com>"

# ======================
# REQUIRED: App Config
# ======================
# Your production URL (no trailing slash)
APP_URL="https://bertrandbrands.com"

# ======================
# OPTIONAL: Timing
# ======================
# Magic link expiration in minutes (default: 15)
PRICING_MAGIC_LINK_TTL_MINUTES="15"

# Pricing session duration in minutes (default: 60)
PRICING_SESSION_TTL_MINUTES="60"

# ======================
# EXISTING: Notifications
# ======================
# These are already configured for Pushover notifications
PUSHOVER_USER_KEY="..."
PUSHOVER_API_TOKEN="..."
