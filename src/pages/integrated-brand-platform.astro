---
/**
 * Integrated Brand + Platform — B Transformation | Core Systems service detail page.
 */
import ServiceDetailLayout from '../layouts/ServiceDetailLayout.astro';

const currentYear = new Date().getFullYear();
---

<ServiceDetailLayout
    title="Integrated Brand + Platform — B Transformation | BG | Brand & Web Systems"
    description="Brand-informed technical design meets system-aware brand execution. Strategy, identity, and platform delivered as a unified system."
    canonical="https://brands.bertrandgroup.ca/integrated-brand-platform"
    ogTitle="Integrated Brand + Platform — B Transformation | BG | Brand & Web Systems"
    ogDescription="Brand-informed technical design meets system-aware brand execution."
    schemaJson={{
        "@context": "https://schema.org",
        "@type": "Service",
        "name": "Integrated Brand + Platform",
        "description": "Brand-informed technical design meets system-aware brand execution.",
        "provider": {
            "@type": "ProfessionalService",
            "name": "Bertrand Group | Brand & Web Systems",
            "url": "https://brands.bertrandgroup.ca"
        }
    }}
    spotlightColor="rgba(217, 119, 6, 0.12)"
>
    <Fragment slot="head">
        <style is:inline>
            .service-page { min-height: 100vh; padding-top: 80px; position: relative; overflow: hidden; }

            .service-page__spotlight { position: fixed; border-radius: 50%; filter: blur(80px); pointer-events: none; z-index: 0; will-change: transform, opacity; }
            .service-page__spotlight--1 { width: 400px; height: 400px; background: rgba(217, 119, 6, 0.12); top: 10%; left: -10%; animation: organicBreathe 18s ease-in-out infinite; }
            .service-page__spotlight--2 { width: 350px; height: 350px; background: rgba(217, 119, 6, 0.10); bottom: 20%; right: -5%; animation: organicBreathe 22s ease-in-out infinite 0.5s; }

            @keyframes organicBreathe {
                0%, 100% { opacity: 0.85; transform: translate(0, 0) scale(1); }
                25% { opacity: 0.95; transform: translate(15px, -10px) scale(1.05); }
                50% { opacity: 0.75; transform: translate(-10px, 15px) scale(0.95); }
                75% { opacity: 0.9; transform: translate(10px, 5px) scale(1.02); }
            }

            .service-subbrand { display: flex; align-items: center; justify-content: center; gap: 0.625rem; margin-bottom: var(--space-md); text-decoration: none; transition: opacity var(--duration-fast) ease; }
            .service-subbrand:hover { opacity: 0.8; }
            .service-subbrand__mark { width: 32px; height: 32px; filter: brightness(0) invert(1); }
            .service-subbrand__name { font-family: 'Fraunces', Georgia, serif; font-size: var(--text-xl); font-weight: 300; letter-spacing: 0.02em; color: var(--text); }

            .service-hero { padding: var(--space-lg) 0 var(--space-md); text-align: center; position: relative; z-index: 1; }
            .service-hero__headline { font-family: 'Inter', -apple-system, sans-serif; font-size: clamp(1.75rem, 4vw, 2.5rem); font-weight: 400; line-height: 1.25; color: var(--text); max-width: 700px; margin: 0 auto var(--space-md); }
            .service-hero__description { font-size: var(--text-lg); color: var(--text-muted); max-width: 600px; margin: 0 auto; line-height: 1.6; }

            .service-content { padding: var(--space-xl) 0; position: relative; z-index: 1; }
            .service-card { background: rgba(217, 119, 6, 0.04); border: 1px solid rgba(217, 119, 6, 0.15); border-radius: var(--radius-lg); padding: var(--space-xl); max-width: 700px; margin: 0 auto var(--space-lg); }
            .service-card__section { margin-bottom: var(--space-lg); }
            .service-card__section:last-child { margin-bottom: 0; }
            .service-card__label { font-size: var(--text-xs); font-weight: 600; text-transform: uppercase; letter-spacing: 0.1em; color: rgba(217, 119, 6, 0.9); margin-bottom: var(--space-sm); }
            .service-card__list { list-style: none; padding: 0; margin: 0; }
            .service-card__list li { position: relative; padding-left: 1.5rem; margin-bottom: 0.5rem; font-size: var(--text-base); color: var(--text-muted); line-height: 1.5; }
            .service-card__list li::before { content: ''; position: absolute; left: 0; top: 0.5rem; width: 6px; height: 6px; background: rgba(217, 119, 6, 0.6); border-radius: 50%; }
            .service-card__text { font-size: var(--text-base); color: var(--text-muted); line-height: 1.6; }
            .service-card__meta { display: flex; gap: var(--space-lg); flex-wrap: wrap; }
            .service-card__meta-item { flex: 1; min-width: 150px; }
            .service-card__meta-value { font-size: var(--text-lg); font-weight: 500; color: var(--text); }

            .service-cta { padding: var(--space-xl) 0 var(--space-2xl); text-align: center; position: relative; z-index: 1; }
            .service-cta__card { background: rgba(217, 119, 6, 0.06); border: 1px solid rgba(217, 119, 6, 0.25); border-radius: var(--radius-lg); padding: var(--space-xl); max-width: 500px; margin: 0 auto; }
            .service-cta__title { font-size: var(--text-xl); font-weight: 400; color: var(--text); margin-bottom: var(--space-sm); }
            .service-cta__text { font-size: var(--text-sm); color: var(--text-muted); margin-bottom: var(--space-md); line-height: 1.6; }
            .service-cta__intake { display: block; }
            .service-cta__intake .service-cta__button { display: inline-block; padding: 0.875rem 2rem; background: #D97706; color: #fff; font-size: var(--text-base); font-weight: 600; text-decoration: none; border-radius: var(--radius-md); transition: background var(--duration-fast) ease, transform var(--duration-fast) ease; }
            .service-cta__intake .service-cta__button:hover { background: #B45309; transform: translateY(-1px); }
            .service-cta__booking { display: none; }
            .service-cta__booking .service-cta__button { display: inline-block; padding: 0.875rem 2rem; background: #D97706; color: #fff; font-size: var(--text-base); font-weight: 600; text-decoration: none; border-radius: var(--radius-md); transition: background var(--duration-fast) ease; }
            .service-cta__booking .service-cta__button:hover { background: #B45309; }

            .service-back { display: inline-flex; align-items: center; gap: 0.5rem; font-size: var(--text-sm); color: var(--text-muted); text-decoration: none; margin-bottom: var(--space-md); transition: color var(--duration-fast) ease; }
            .service-back:hover { color: var(--text); }

            .service-footer { padding: var(--space-lg) 0; text-align: center; border-top: 1px solid var(--border); position: relative; z-index: 1; }
            .service-footer__text { font-size: var(--text-sm); color: var(--text-subtle); }
            .service-footer__phone { font-size: var(--text-sm); margin-top: 0.5rem; }
            .service-footer__phone a { color: var(--text-muted); text-decoration: none; }
            .service-footer__phone a:hover { color: var(--text); }

            .service-hero { position: relative; }
            .service-hero__illustration { display: block; margin: 0 auto 0.75rem; width: clamp(200px, 35vw, 320px); height: auto; pointer-events: none; opacity: 1; }
            @media (max-width: 900px) { .service-hero__illustration { width: clamp(180px, 45vw, 280px); opacity: 0.85; } }
            @media (max-width: 480px) { .service-hero__illustration { width: clamp(150px, 55vw, 220px); opacity: 0.7; } }

            @media (max-width: 768px) {
                .service-page__spotlight { filter: blur(40px); }
                .service-page__spotlight--1 { width: 250px; height: 250px; }
                .service-page__spotlight--2 { width: 200px; height: 200px; }
                .service-page .container { padding: 0 1.25rem; }
                .service-hero { padding: var(--space-sm) 0 0.5rem; }
                .service-content { padding: 0.5rem 0; }
                .service-card { padding: 3rem; max-width: 100%; }
                .service-card__list li { font-size: var(--text-base); }
                .service-card__text { font-size: var(--text-base); }
                .service-card__section { margin-bottom: 0.75rem; }
                .service-cta { padding: 0.5rem 0 var(--space-sm); }
                .service-cta__card { padding: 3rem; max-width: 100%; }
                .service-subbrand { margin-bottom: 0.75rem; }
            }
        </style>
    </Fragment>

    <div class="service-page__spotlight service-page__spotlight--1" aria-hidden="true"></div>
    <div class="service-page__spotlight service-page__spotlight--2" aria-hidden="true"></div>

    <main class="service-page" id="main-content">
        <div class="container">
            <a href="/core-systems" class="service-back">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M19 12H5M12 19l-7-7 7-7"/></svg>
                Back to Transformation
            </a>

            <a href="/core-systems" class="service-subbrand">
                <img src="/assets/bg-brands-logomark.png" alt="" class="service-subbrand__mark" width="40" height="40">
                <span class="service-subbrand__name">Transformation</span>
            </a>

            <section class="service-hero">
                <svg class="service-hero__illustration" viewBox="85 90 330 195" fill="none" aria-hidden="true">
                    <!-- System containment -->
                    <rect x="100" y="100" width="300" height="200" rx="4" stroke="rgba(217, 119, 6, 0.10)" stroke-width="1" stroke-dasharray="6 4"/>
                    <!-- Triangle fill (unified system) -->
                    <polygon points="250,135 145,265 355,265" fill="rgba(217, 119, 6, 0.03)" stroke="rgba(217, 119, 6, 0.08)" stroke-width="1"/>
                    <!-- Primary connections -->
                    <line x1="148" y1="254" x2="242" y2="148" stroke="rgba(217, 119, 6, 0.22)" stroke-width="1.5"/>
                    <line x1="258" y1="148" x2="352" y2="254" stroke="rgba(217, 119, 6, 0.22)" stroke-width="1.5"/>
                    <line x1="152" y1="260" x2="348" y2="260" stroke="rgba(217, 119, 6, 0.20)" stroke-width="1"/>
                    <!-- Cross connections -->
                    <line x1="140" y1="260" x2="360" y2="140" stroke="rgba(217, 119, 6, 0.08)" stroke-width="1" stroke-dasharray="4 6"/>
                    <line x1="360" y1="260" x2="140" y2="140" stroke="rgba(217, 119, 6, 0.06)" stroke-width="1" stroke-dasharray="3 8"/>
                    <!-- Center convergence -->
                    <line x1="250" y1="140" x2="250" y2="260" stroke="rgba(217, 119, 6, 0.10)" stroke-width="1" stroke-dasharray="3 5"/>
                    <circle cx="250" cy="210" r="5" stroke="rgba(217, 119, 6, 0.18)" stroke-width="1"/>
                    <circle cx="250" cy="210" r="2" fill="rgba(217, 119, 6, 0.25)"/>
                    <!-- Primary nodes -->
                    <circle cx="140" cy="260" r="12" stroke="rgba(217, 119, 6, 0.15)" stroke-width="1"/>
                    <circle cx="140" cy="260" r="6" stroke="rgba(217, 119, 6, 0.25)" stroke-width="1.5"/>
                    <circle cx="140" cy="260" r="2.5" fill="rgba(217, 119, 6, 0.30)"/>
                    <circle cx="250" cy="140" r="12" stroke="rgba(217, 119, 6, 0.15)" stroke-width="1"/>
                    <circle cx="250" cy="140" r="6" stroke="rgba(217, 119, 6, 0.25)" stroke-width="1.5"/>
                    <circle cx="250" cy="140" r="2.5" fill="rgba(217, 119, 6, 0.30)"/>
                    <circle cx="360" cy="260" r="12" stroke="rgba(217, 119, 6, 0.15)" stroke-width="1"/>
                    <circle cx="360" cy="260" r="6" stroke="rgba(217, 119, 6, 0.25)" stroke-width="1.5"/>
                    <circle cx="360" cy="260" r="2.5" fill="rgba(217, 119, 6, 0.30)"/>
                    <!-- Secondary nodes (midpoints) -->
                    <circle cx="195" cy="197" r="2.5" fill="rgba(217, 119, 6, 0.15)"/>
                    <circle cx="305" cy="197" r="2.5" fill="rgba(217, 119, 6, 0.15)"/>
                    <circle cx="250" cy="260" r="2.5" fill="rgba(217, 119, 6, 0.15)"/>
                    <!-- Outer orbit -->
                    <circle cx="250" cy="210" r="95" stroke="rgba(217, 119, 6, 0.05)" stroke-width="1" stroke-dasharray="2 8"/>
                </svg>
                <h1 class="service-hero__headline">Brand-informed technical design. System-aware brand execution.</h1>
                <p class="service-hero__description">The most comprehensive engagement — combining brand strategy, visual identity, and a fully built digital platform into a single, unified system. Deliberate, structured, and designed for long-term stability.</p>
            </section>

            <section class="service-content">
                <div class="service-card">
                    <div class="service-card__section">
                        <p class="service-card__label">Includes</p>
                        <ul class="service-card__list">
                            <li>Strategic brand review</li>
                            <li>Full visual identity development</li>
                            <li>Complete website/platform build</li>
                            <li>Documentation and handoff</li>
                        </ul>
                    </div>

                    <div class="service-card__section">
                        <p class="service-card__label">Best for</p>
                        <ul class="service-card__list">
                            <li>Major transitions or relaunches</li>
                            <li>Organizations with structural misalignment</li>
                            <li>Leaders ready to reset correctly</li>
                        </ul>
                    </div>

                    <div class="service-card__section">
                        <div class="service-card__meta">
                            <div class="service-card__meta-item">
                                <p class="service-card__label">Timeline</p>
                                <p class="service-card__meta-value">8–12+ weeks</p>
                            </div>
                            <div class="service-card__meta-item">
                                <p class="service-card__label">Pricing</p>
                                <p class="service-card__meta-value">Confirmed after intake</p>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <section class="service-cta">
                <div class="service-cta__card">
                    <div class="service-cta__intake" id="intakePrompt">
                        <h2 class="service-cta__title">Start with an intake</h2>
                        <p class="service-cta__text">All work begins with an intake to ensure fit and clarity. Takes about 5 minutes.</p>
                        <a href="/book" class="service-cta__button">Start Intake →</a>
                    </div>
                    <div class="service-cta__booking" id="bookingPrompt">
                        <h2 class="service-cta__title">Ready to schedule</h2>
                        <p class="service-cta__text">Your intake is complete. Check your email for your booking link to schedule your Transformation Discovery.</p>
                        <a href="/book" class="service-cta__button">Start Here →</a>
                    </div>
                </div>
            </section>
        </div>
    </main>

    <footer class="service-footer">
        <p class="service-footer__text">&copy; {currentYear} Bertrand Group</p>
        <p class="service-footer__phone"><a href="tel:+17054133705" class="phone-link__mobile">705-413-3705</a><span class="phone-link__desktop">705-413-3705</span></p>
    </footer>

    <script is:inline>
        (function() {
            var intakePrompt = document.getElementById('intakePrompt');
            var bookingPrompt = document.getElementById('bookingPrompt');
            function hasIntakeAccess() {
                return document.cookie.split(';').some(function(c) {
                    return c.trim().startsWith('bb_intake_completed=') || c.trim().startsWith('bb_returning_client=');
                });
            }
            if (hasIntakeAccess() && intakePrompt && bookingPrompt) {
                intakePrompt.style.display = 'none';
                bookingPrompt.style.display = 'block';
            }
        })();
    </script>
</ServiceDetailLayout>
