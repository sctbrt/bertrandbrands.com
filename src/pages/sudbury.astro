---
/**
 * Sudbury Focus Studio — Google Ads landing page (local campaign).
 * HeaderMinimal standard variant with "Get started →" CTA.
 * Google Ads: AW-17925090292 with phone + form conversion events.
 * Two schema blocks: Service (with geo) + FAQPage.
 * 2-step Formspree form, sticky mobile CTA, scroll fade-in.
 * All CSS uses sb- prefix.
 */
import BaseLayout from '../layouts/BaseLayout.astro';
import HeaderMinimal from '../components/HeaderMinimal.astro';
import SkipLink from '../components/SkipLink.astro';
import VisitorNotify from '../components/VisitorNotify.astro';
import GesturePrevention from '../components/GesturePrevention.astro';

const currentYear = new Date().getFullYear();
---

<BaseLayout
    title="Sudbury Web Design & Branding — Starter Sites from $750 | Bertrand Brands"
    description="Sudbury web designer offering website fixes, redesigns, and brand work for small businesses. Starter Site $750 (1 day), One-Page Redesign $1,250, Brandmark $950. Fixed pricing. Based in Greater Sudbury, Ontario."
    canonical="https://bertrandbrands.ca/sudbury"
    ogTitle="Sudbury Web Design & Branding — Starter Sites from $750 | Bertrand Brands"
    ogDescription="Website and brand work for Sudbury, Ontario businesses. Fixed pricing, fast turnaround. Based in Greater Sudbury."
    schemaJson={{
        "@context": "https://schema.org",
        "@type": "Service",
        "name": "B Build — Sudbury",
        "description": "Fixed-scope web and brand work for small businesses in Greater Sudbury and Northern Ontario.",
        "provider": {
            "@type": "ProfessionalService",
            "name": "Bertrand Brands",
            "url": "https://bertrandbrands.ca",
            "telephone": "+17054133705",
            "address": {
                "@type": "PostalAddress",
                "addressLocality": "Greater Sudbury",
                "addressRegion": "Ontario",
                "addressCountry": "CA"
            },
            "geo": {
                "@type": "GeoCoordinates",
                "latitude": 46.4917,
                "longitude": -80.9930
            },
            "sameAs": ["https://linkedin.com/in/sudburyon"]
        },
        "areaServed": [
            { "@type": "City", "name": "Greater Sudbury", "containedInPlace": { "@type": "AdministrativeArea", "name": "Ontario" } },
            { "@type": "AdministrativeArea", "name": "Northern Ontario" }
        ],
        "hasOfferCatalog": {
            "@type": "OfferCatalog",
            "name": "Build Offerings",
            "itemListElement": [
                { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Starter Site" }, "price": "750", "priceCurrency": "CAD" },
                { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "One-Page System Redesign" }, "price": "1250", "priceCurrency": "CAD" },
                { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Brandmark & Visual Identity" }, "price": "950", "priceCurrency": "CAD" }
            ]
        }
    }}
>
    <Fragment slot="head">
        <!-- FAQPage Schema (second schema block) -->
        <script type="application/ld+json" set:html={JSON.stringify({
            "@context": "https://schema.org",
            "@type": "FAQPage",
            "mainEntity": [
