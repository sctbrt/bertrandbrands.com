    <script is:inline>
        // Check for intake completion and show appropriate section
        (function() {
            var intakePrompt = document.getElementById('intakePrompt');
            var bookingPrompt = document.getElementById('bookingPrompt');

            function hasIntakeAccess() {
                return document.cookie.split(';').some(function(c) {
                    return c.trim().startsWith('bb_intake_completed=') || c.trim().startsWith('bb_returning_client=');
                });
            }

            if (hasIntakeAccess() && intakePrompt && bookingPrompt) {
                intakePrompt.style.display = 'none';
                bookingPrompt.style.display = 'block';
            }
        })();

        // Pre-select offering when clicking secondary card CTAs
        document.querySelectorAll('.fs-offerings__secondary .fs-offering__cta').forEach(function(cta) {
            cta.addEventListener('click', function(e) {
                var title = this.closest('.fs-offering').querySelector('.fs-offering__title').textContent;
                var select = document.getElementById('offering');
                if (select) {
                    for (var i = 0; i < select.options.length; i++) {
                        if (select.options[i].text.includes(title)) {
                            select.selectedIndex = i;
                            break;
                        }
                    }
                }
            });
        });

    </script>

