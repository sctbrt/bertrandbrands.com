---
/**
 * Website Conversion Snapshot — Ad landing page.
 * Centered logo header (no navigation). Amber accents.
 * noindex, nofollow — Google Ads landing page.
 */
import BaseLayout from '../layouts/BaseLayout.astro';
import HeaderMinimal from '../components/HeaderMinimal.astro';
import SkipLink from '../components/SkipLink.astro';
import AnnouncementBanner from '../components/AnnouncementBanner.astro';
import VisitorNotify from '../components/VisitorNotify.astro';
import GesturePrevention from '../components/GesturePrevention.astro';

const currentYear = new Date().getFullYear();
---

<BaseLayout
    title="Website Conversion Snapshot — $195 | BG | Brand & Web Systems"
    description="A diagnostic review of your website with prioritized fixes. Understand what's blocking conversions and exactly where to focus next. Delivered in 48 hours."
    canonical="https://bertrandbrands.ca/website-conversion-snapshot"
    ogTitle="Website Conversion Snapshot — $195 | BG | Brand & Web Systems"
    ogDescription="A diagnostic review of your website with prioritized fixes. Understand what's blocking conversions and exactly where to focus next."
    robots="noindex, nofollow"
    schemaJson={{
        "@context": "https://schema.org",
        "@type": "Service",
        "name": "Website Conversion Snapshot",
        "description": "A diagnostic review of your website with prioritized fixes for conversion blockers. Delivered within 48 hours.",
        "provider": {
            "@type": "ProfessionalService",
            "name": "Bertrand Group | Brand & Web Systems",
            "url": "https://bertrandbrands.ca"
        },
        "offers": {
            "@type": "Offer",
            "price": "195",
            "priceCurrency": "CAD"
        }
    }}
>
    <Fragment slot="head">
        <style is:inline>
            html { touch-action: pan-x pan-y; }

            .ad-page {
                min-height: 100vh;
                padding-top: 80px;
                position: relative;
                overflow: hidden;
            }

            .ad-hero {
                padding: var(--space-3xl) 0 var(--space-2xl);
                text-align: center;
            }

            .ad-hero__title {
                font-family: 'Inter', -apple-system, sans-serif;
                font-size: clamp(2rem, 5vw, 2.75rem);
                font-weight: 300;
                line-height: 1.2;
                margin-bottom: var(--space-md);
                color: var(--text);
            }

            .ad-hero__subtitle {
                font-size: var(--text-lg);
                color: var(--text-muted);
                max-width: 560px;
                margin: 0 auto;
                line-height: 1.7;
            }

            .ad-section {
                padding: var(--space-2xl) 0;
            }

            .ad-section--alt {
                background: var(--bg-alt, #0d0d0d);
                position: relative;
            }

            .ad-section--alt::before {
                content: '';
                position: absolute;
                top: 0;
                left: 50%;
                transform: translateX(-50%);
                width: 200px;
                height: 1px;
                background: linear-gradient(90deg, transparent, rgba(217, 119, 6, 0.4), transparent);
            }

            .ad-section__title {
                font-family: 'Inter', -apple-system, sans-serif;
                font-size: var(--text-2xl);
                font-weight: 400;
                margin-bottom: var(--space-lg);
                text-align: center;
                color: var(--text);
            }

            .ad-section__intro {
                font-size: var(--text-base);
                color: var(--text-muted);
                text-align: center;
                max-width: 600px;
                margin: 0 auto var(--space-xl);
                line-height: 1.7;
            }

            .ad-fit {
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
                gap: var(--space-lg);
                max-width: 800px;
                margin: 0 auto;
            }

            .ad-fit__column {
                background: var(--bg-subtle);
                border: 1px solid var(--border);
                border-radius: var(--radius-lg);
                padding: var(--space-lg);
            }

            .ad-fit__heading {
                font-size: var(--text-sm);
                font-weight: 500;
                text-transform: uppercase;
                letter-spacing: 0.05em;
                margin-bottom: var(--space-md);
                color: var(--text-muted);
            }

            .ad-fit__heading--for {
                color: var(--accent);
            }

            .ad-fit__list {
                list-style: none;
                padding: 0;
                margin: 0;
            }

            .ad-fit__list li {
                font-size: var(--text-sm);
                color: var(--text-muted);
                line-height: 1.6;
                padding: 0.5rem 0;
                padding-left: 1.25rem;
                position: relative;
            }

            .ad-fit__list li::before {
                content: '';
                position: absolute;
                left: 0;
                top: 0.85rem;
                width: 4px;
                height: 4px;
                border-radius: 50%;
                background: var(--text-subtle);
            }

            .ad-fit__column:first-child .ad-fit__list li::before {
                background: var(--accent);
            }

            .ad-process {
                max-width: 600px;
                margin: 0 auto;
            }

            .ad-process__step {
                display: flex;
                gap: var(--space-md);
                padding: var(--space-md) 0;
                border-bottom: 1px solid var(--border);
            }

            .ad-process__step:last-child {
                border-bottom: none;
            }

            .ad-process__number {
                font-size: var(--text-sm);
                font-weight: 500;
                color: var(--accent);
                min-width: 24px;
            }

            .ad-process__text {
                font-size: var(--text-sm);
                color: var(--text-muted);
                line-height: 1.6;
            }

            .ad-deliverables {
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
                gap: var(--space-md);
                max-width: 800px;
                margin: 0 auto;
            }

            .ad-deliverable {
                background: var(--bg-subtle);
                border: 1px solid var(--border);
                border-radius: var(--radius-lg);
                padding: var(--space-md);
            }

            .ad-deliverable__title {
                font-size: var(--text-sm);
                font-weight: 500;
                color: var(--text);
                margin-bottom: 0.5rem;
            }

            .ad-deliverable__text {
                font-size: var(--text-sm);
                color: var(--text-muted);
                line-height: 1.6;
            }

            .ad-rationale {
                max-width: 560px;
                margin: 0 auto;
                text-align: center;
            }

            .ad-rationale__text {
                font-size: var(--text-sm);
                color: var(--text-muted);
                line-height: 1.7;
            }

            .ad-about {
                max-width: 600px;
                margin: 0 auto;
                text-align: center;
            }

            .ad-about__text {
                font-size: var(--text-sm);
                color: var(--text-muted);
                line-height: 1.7;
                margin-bottom: var(--space-sm);
            }

            .ad-about__text:last-child {
                margin-bottom: 0;
            }

            .ad-cta {
                text-align: center;
                padding: var(--space-3xl) 0;
            }

            .ad-cta__price {
                font-family: 'Inter', -apple-system, sans-serif;
                font-size: var(--text-3xl);
                font-weight: 300;
                color: var(--text);
                margin-bottom: var(--space-xs);
            }

            .ad-cta__price span {
                font-size: var(--text-lg);
                color: var(--text-muted);
            }

            .ad-cta__note {
                font-size: var(--text-sm);
                color: var(--text-subtle);
                margin-bottom: var(--space-lg);
            }

            .ad-cta__button {
                display: inline-flex;
                align-items: center;
                gap: 0.5rem;
                padding: 1rem 2rem;
                background: rgba(217, 119, 6, 0.85);
                border: 1px solid rgba(217, 119, 6, 0.3);
                color: #000;
                font-weight: 500;
                border-radius: var(--radius-md);
                text-decoration: none;
                transition: background var(--duration-fast) var(--ease-out);
                position: relative;
            }

            .ad-cta__button:hover {
                background: rgba(217, 119, 6, 0.95);
            }

            .ad-cta__button::before {
                content: '';
                position: absolute;
                inset: -20px -30px;
                background: radial-gradient(ellipse, rgba(217, 119, 6, 0.2) 0%, transparent 70%);
                filter: blur(25px);
                opacity: 0;
                transition: opacity 0.4s ease;
                z-index: -1;
            }

            .ad-cta__button:hover::before {
                opacity: 1;
            }

            .ad-footer {
                border-top: 1px solid var(--border);
                padding: var(--space-xl) var(--gutter, 1.5rem);
                text-align: center;
            }

            .ad-footer__text {
                font-size: var(--text-sm);
                color: var(--text-subtle);
                margin-bottom: 0.5rem;
            }

            .ad-footer__phone {
                font-size: var(--text-xs);
                color: var(--text-subtle);
            }

            .ad-footer__phone a {
                color: inherit;
                text-decoration: none;
            }

            .ad-spotlight {
                position: fixed;
                border-radius: 50%;
                filter: blur(120px);
                pointer-events: none;
                z-index: 0;
                opacity: 0;
                will-change: transform, opacity;
            }

            .ad-spotlight--orange {
                width: 400px;
                height: 400px;
                background: radial-gradient(circle, rgba(217, 119, 6, 0.2) 0%, rgba(217, 119, 6, 0.06) 50%, transparent 70%);
                bottom: -100px;
                left: -100px;
                animation: spotlightFadeIn 1.5s ease-out 0.3s forwards;
            }

            .ad-spotlight--blue {
                width: 350px;
                height: 350px;
                background: radial-gradient(circle, rgba(37, 99, 235, 0.15) 0%, rgba(37, 99, 235, 0.04) 50%, transparent 70%);
                top: 80px;
                right: -80px;
                animation: spotlightFadeIn 1.5s ease-out 0.5s forwards;
            }

            @keyframes spotlightFadeIn {
                to { opacity: 1; }
            }

            @media (max-width: 768px) {
                .ad-spotlight {
                    filter: blur(80px);
                }
                .ad-spotlight--orange {
                    width: 280px;
                    height: 280px;
                    bottom: -80px;
                    left: -80px;
                }
                .ad-spotlight--blue {
                    width: 240px;
                    height: 240px;
                    top: 60px;
                    right: -60px;
                }
            }

            @media (prefers-reduced-motion: reduce) {
                .ad-spotlight {
                    animation: none;
                    opacity: 1;
                }
            }
        </style>
    </Fragment>

    <SkipLink />

    <!-- Ambient Spotlights -->
    <div class="ad-spotlight ad-spotlight--orange" aria-hidden="true"></div>
    <div class="ad-spotlight ad-spotlight--blue" aria-hidden="true"></div>

    <HeaderMinimal variant="ad" />

    <main class="ad-page" id="main-content">
        <!-- 1. Hero Section -->
        <section class="ad-hero">
            <div class="container">
                <h1 class="ad-hero__title">Your website might be costing you opportunities</h1>
                <p class="ad-hero__subtitle">
                    You know something's off, but you're not sure where to start. Get a clear, prioritized breakdown of what's blocking conversions—delivered in 48 hours.
                </p>
            </div>
        </section>

        <!-- 2. Who This Is For / Not For -->
        <section class="ad-section ad-section--alt">
            <div class="container">
                <h2 class="ad-section__title">Is this snapshot for you?</h2>

                <div class="ad-fit">
                    <div class="ad-fit__column">
                        <p class="ad-fit__heading ad-fit__heading--for">This is for you if</p>
                        <ul class="ad-fit__list">
                            <li>Your website exists but isn't converting</li>
                            <li>You're not sure what to fix first</li>
                            <li>You want honest diagnosis, not a sales pitch</li>
                            <li>You'd rather read a document than sit through a call</li>
                        </ul>
                    </div>
                    <div class="ad-fit__column">
                        <p class="ad-fit__heading">This is not for you if</p>
                        <ul class="ad-fit__list">
                            <li>You don't have a website yet</li>
                            <li>You're looking for free advice</li>
                            <li>You want someone to implement the fixes for you</li>
                            <li>You're not ready to act on clear recommendations</li>
                        </ul>
                    </div>
                </div>
            </div>
        </section>

        <!-- 3. What Happens -->
        <section class="ad-section">
            <div class="container">
                <h2 class="ad-section__title">How it works</h2>
                <p class="ad-section__intro">
                    No calls. No back-and-forth. Pay, submit your details, and receive your snapshot within 48 hours.
                </p>

                <div class="ad-process">
                    <div class="ad-process__step">
                        <span class="ad-process__number">01</span>
                        <p class="ad-process__text">Pay via Stripe and complete a short intake form with your website URL</p>
                    </div>
                    <div class="ad-process__step">
                        <span class="ad-process__number">02</span>
                        <p class="ad-process__text">Your website is diagnosed for conversion blockers: clarity, CTAs, trust signals, mobile usability</p>
                    </div>
                    <div class="ad-process__step">
                        <span class="ad-process__number">03</span>
                        <p class="ad-process__text">You receive a PDF with your top 5 prioritized fixes—within 48 hours</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- 4. What You Receive -->
        <section class="ad-section ad-section--alt">
            <div class="container">
                <h2 class="ad-section__title">What you'll receive</h2>

                <div class="ad-deliverables">
                    <div class="ad-deliverable">
                        <h3 class="ad-deliverable__title">First-Impression Clarity</h3>
                        <p class="ad-deliverable__text">What visitors see above the fold—and whether your message lands in 3 seconds.</p>
                    </div>
                    <div class="ad-deliverable">
                        <h3 class="ad-deliverable__title">Conversion Blockers</h3>
                        <p class="ad-deliverable__text">CTA presence, trust signals, mobile usability—everything that stops visitors from acting.</p>
                    </div>
                    <div class="ad-deliverable">
                        <h3 class="ad-deliverable__title">Top 5 Prioritized Fixes</h3>
                        <p class="ad-deliverable__text">Ranked by impact. A PDF you can act on yourself, share with your team, or hand to a developer.</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- 5. Why This Is Paid -->
        <section class="ad-section">
            <div class="container">
                <h2 class="ad-section__title">Why this isn't free</h2>

                <div class="ad-rationale">
                    <p class="ad-rationale__text">
                        Free audits often serve the consultant, not you. This snapshot is designed to give you genuine, actionable value—whether or not you ever work with us again. The fee ensures the diagnosis is thorough and the recommendations are honest.
                    </p>
                </div>
            </div>
        </section>

        <!-- 6. About Bertrand Group -->
        <section class="ad-section ad-section--alt">
            <div class="container">
                <h2 class="ad-section__title">About Bertrand Group</h2>

                <div class="ad-about">
                    <p class="ad-about__text">
                        Bertrand Group helps business owners get clarity on their brand and web presence. Based in Sudbury, Ontario, working with clients across Canada.
                    </p>
                    <p class="ad-about__text">
                        This snapshot exists because most businesses don't need a full project—they need diagnosis. Know what to fix first, then decide what's next.
                    </p>
                </div>
            </div>
        </section>

        <!-- 7. Final CTA -->
        <section class="ad-cta">
            <div class="container">
                <p class="ad-cta__price">$195 <span>CAD</span></p>
                <p class="ad-cta__note">Delivered within 48 hours</p>
                <a href="/intake/website-conversion-snapshot" class="ad-cta__button">Get Your Conversion Snapshot</a>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <footer class="ad-footer">
        <p class="ad-footer__text">&copy; {currentYear} Bertrand Group</p>
        <p class="ad-footer__phone"><a href="tel:+17054133705" class="phone-link__mobile">705-413-3705</a><span class="phone-link__desktop">705-413-3705</span></p>
    </footer>

    <GesturePrevention />

    <AnnouncementBanner />
    <VisitorNotify />
</BaseLayout>
