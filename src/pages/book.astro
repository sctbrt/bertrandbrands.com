---
/**
 * Book — Start Here hub page.
 * Migrated from src/_legacy/pages/book.html
 */
import BaseLayout from '../layouts/BaseLayout.astro';
import HeaderUniversal from '../components/HeaderUniversal.astro';
import SkipLink from '../components/SkipLink.astro';
import AnnouncementBanner from '../components/AnnouncementBanner.astro';
import VisitorNotify from '../components/VisitorNotify.astro';
import GesturePrevention from '../components/GesturePrevention.astro';

const currentYear = new Date().getFullYear();

const schema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Start Here - Bertrand Group | Brands & Web Systems",
  "description": "Begin your journey with Bertrand Group. All work starts with an intake to ensure fit and clarity.",
  "provider": {
    "@type": "ProfessionalService",
    "name": "Bertrand Group | Brands & Web Systems",
    "url": "https://brands.bertrandgroup.ca",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "Greater Sudbury",
      "addressRegion": "Ontario",
      "addressCountry": "CA"
    }
  }
};
---

<BaseLayout
  title="Start Here — BG | Brands & Web Systems"
  description="Begin your journey with Bertrand Group. All work starts with an intake to ensure fit and clarity."
  canonical="https://brands.bertrandgroup.ca/book"
  ogTitle="Start Here — BG | Brands & Web Systems"
  ogDescription="Begin your journey with Bertrand Group. All work starts with an intake to ensure fit and clarity."
  schemaJson={schema}
>
  <Fragment slot="head">
    <style is:inline>
        /* Prevent pinch-to-zoom and triple-tap zoom on iOS */
        html {
            touch-action: pan-x pan-y;
        }

        @supports (-webkit-touch-callout: none) {
            html {
                -webkit-text-size-adjust: 100%;
            }
        }

        /* Override main.css header to be visible by default on landing pages */
        .header {
            opacity: 1 !important;
            visibility: visible !important;
            pointer-events: auto !important;
            transform: translateY(0) !important;
        }

        .header__logo-icon,
        .header__wordmark {
            opacity: 1 !important;
        }

        /* Book Page */
        .book-page {
            min-height: 100vh;
            padding-top: 80px;
            position: relative;
            overflow: hidden;
        }

        /* Hero */
        .book-hero {
            padding: var(--space-2xl, 4rem) 0 var(--space-lg, 2rem);
            text-align: center;
        }

        .book-hero__title {
            font-family: 'Inter', -apple-system, sans-serif;
            font-size: clamp(2rem, 5vw, 3rem);
            font-weight: 300;
            line-height: 1.2;
            margin-bottom: var(--space-sm);
            color: var(--text);
        }

        .book-hero__subtitle {
            font-size: var(--text-lg);
            color: var(--text-muted);
            max-width: 550px;
            margin: 0 auto;
            line-height: 1.6;
        }

        .book-hero__reassurance {
            font-size: var(--text-sm);
            color: var(--text-subtle);
            max-width: 480px;
            margin: var(--space-md) auto 0;
            line-height: 1.6;
            font-style: italic;
        }

        /* Intake Section */
        .intake-section {
            padding: var(--space-lg, 2rem) 0 var(--space-xl, 3rem);
        }

        /* Intake Wrapper */
        .intake-wrapper {
            padding: var(--space-lg);
            position: relative;
            background: rgba(37, 99, 235, 0.03);
            border: 1px solid rgba(37, 99, 235, 0.15);
            border-radius: 16px;
            overflow: hidden;
        }

        /* Blue spotlight accents - animated drift */
        @keyframes intakeDrift1 {
            0%, 100% { transform: translateY(-30%) translateX(0); opacity: 0.12; }
            25% { transform: translateY(-35%) translateX(3%); opacity: 0.14; }
            50% { transform: translateY(-28%) translateX(-2%); opacity: 0.10; }
            75% { transform: translateY(-32%) translateX(1%); opacity: 0.13; }
        }

        @keyframes intakeDrift2 {
            0%, 100% { transform: translateY(30%) translateX(0); opacity: 0.12; }
            33% { transform: translateY(25%) translateX(-3%); opacity: 0.14; }
            66% { transform: translateY(33%) translateX(2%); opacity: 0.10; }
        }

        .intake-wrapper::before,
        .intake-wrapper::after {
            content: '';
            position: absolute;
            border-radius: 50%;
            pointer-events: none;
            filter: blur(120px);
            opacity: 0.12;
            z-index: 0;
        }

        .intake-wrapper::before {
            width: 400px;
            height: 400px;
            background: #2563EB;
            top: 0;
            left: 5%;
            transform: translateY(-30%);
            animation: intakeDrift1 20s ease-in-out infinite;
        }

        .intake-wrapper::after {
            width: 350px;
            height: 350px;
            background: #2563EB;
            bottom: 0;
            right: 5%;
            transform: translateY(30%);
            animation: intakeDrift2 25s ease-in-out infinite;
        }

        @media (prefers-reduced-motion: reduce) {
            .intake-wrapper::before,
            .intake-wrapper::after {
                animation: none;
            }
        }

        .intake-section__header {
            text-align: center;
            margin-bottom: var(--space-lg);
            position: relative;
            z-index: 1;
        }

        .intake-section__label {
            font-size: var(--text-xs);
            font-weight: 500;
            letter-spacing: 0.1em;
            text-transform: uppercase;
            color: var(--text-subtle);
            margin-bottom: var(--space-xs);
        }

        .intake-section__title {
            font-family: 'Inter', -apple-system, sans-serif;
            font-size: var(--text-2xl);
            font-weight: 300;
            color: var(--text);
        }

        .intake-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: var(--space-md);
            position: relative;
            z-index: 1;
        }

        @media (max-width: 900px) {
            .intake-grid {
                grid-template-columns: 1fr;
                max-width: 400px;
                margin: 0 auto;
            }
        }

        @media (max-width: 768px) {
            .intake-wrapper {
                padding: var(--space-md);
            }
            .intake-wrapper::before,
            .intake-wrapper::after {
                filter: blur(80px);
                opacity: 0.08;
            }
            .intake-wrapper::before {
                width: 250px;
                height: 250px;
            }
            .intake-wrapper::after {
                width: 220px;
                height: 220px;
            }
        }

        /* Intake Cards */
        .intake-card {
            background: rgba(37, 99, 235, 0.05);
            border: 1px solid rgba(37, 99, 235, 0.12);
            border-radius: 12px;
            padding: var(--space-lg);
            display: flex;
            flex-direction: column;
            transition: transform var(--duration-fast) ease, border-color var(--duration-fast) ease, box-shadow var(--duration-fast) ease;
            position: relative;
            overflow: hidden;
            box-shadow: inset 0 1px 0 0 rgba(255, 255, 255, 0.04);
        }

        .intake-card:hover {
            transform: translateY(-3px);
            border-color: rgba(37, 99, 235, 0.4);
            box-shadow: inset 0 1px 0 0 rgba(255, 255, 255, 0.06),
                        0 8px 24px -8px rgba(37, 99, 235, 0.2);
        }

        .intake-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 2px;
            background: linear-gradient(90deg, transparent, #2563EB, transparent);
            opacity: 0;
            transition: opacity var(--duration-fast) ease;
        }

        .intake-card:hover::before {
            opacity: 1;
        }

        .intake-card:active {
            transform: translateY(-1px);
        }

        .intake-card--recommended {
            border-color: rgba(37, 99, 235, 0.25);
            background: rgba(37, 99, 235, 0.08);
        }

        .intake-card__badge {
            position: absolute;
            top: var(--space-sm);
            right: var(--space-sm);
            font-size: 0.625rem;
            font-weight: 600;
            letter-spacing: 0.05em;
            text-transform: uppercase;
            padding: 0.25rem 0.5rem;
            background: rgba(37, 99, 235, 0.2);
            color: #60A5FA;
            border-radius: var(--radius-sm);
        }

        .intake-card__icon {
            width: 40px;
            height: 40px;
            margin-bottom: var(--space-sm);
            color: #2563EB;
            opacity: 0.8;
        }

        .intake-card__title {
            font-family: 'Inter', -apple-system, sans-serif;
            font-size: var(--text-lg);
            font-weight: 500;
            color: var(--text);
            margin-bottom: var(--space-xs);
        }

        .intake-card__meta {
            font-size: var(--text-xs);
            color: var(--text-muted);
            margin-bottom: var(--space-sm);
        }

        .intake-card__description {
            font-size: var(--text-sm);
            color: var(--text-muted);
            line-height: 1.6;
            margin-bottom: var(--space-md);
            flex-grow: 1;
        }

        .intake-card__footer {
            display: flex;
            flex-direction: column;
            gap: var(--space-sm);
            padding-top: var(--space-sm);
            border-top: 1px solid rgba(37, 99, 235, 0.15);
        }

        .intake-card__price {
            font-family: 'Inter', -apple-system, sans-serif;
            font-size: var(--text-base);
            font-weight: 500;
            color: #2563EB;
        }

        .intake-card__price span {
            font-size: var(--text-xs);
            font-weight: 400;
            color: var(--text-subtle);
        }

        .intake-card__price--free {
            font-size: var(--text-sm);
            font-weight: 400;
            font-style: italic;
            color: var(--text-subtle);
        }

        .intake-card__cta {
            display: inline-flex;
            align-items: center;
            gap: 0.375rem;
            padding: 0.625rem 1.25rem;
            background: #2563EB;
            color: #fff;
            font-size: var(--text-sm);
            font-weight: 500;
            text-decoration: none;
            border: 1px solid #2563EB;
            border-radius: var(--radius-md);
            transition: all var(--duration-fast) var(--ease-out);
            white-space: nowrap;
        }

        .intake-card__cta:hover {
            background: #1D4ED8;
            border-color: #1D4ED8;
        }

        /* Help Section */
        .book-help {
            padding: var(--space-xl, 3rem) 0;
            text-align: center;
        }

        .book-help__text {
            font-size: var(--text-sm);
            color: var(--text-subtle);
            max-width: 450px;
            margin: 0 auto var(--space-sm);
        }

        .book-help__link {
            font-size: var(--text-sm);
            color: var(--text-muted);
            text-decoration: none;
            transition: color var(--duration-fast) ease;
        }

        .book-help__link:hover {
            color: var(--accent);
        }

        /* Returning Client Note */
        .returning-client {
            text-align: center;
            padding: var(--space-lg) 0;
            border-top: 1px solid var(--border);
        }

        .returning-client__text {
            font-size: var(--text-sm);
            color: var(--text-subtle);
            font-style: italic;
        }

        /* Footer */
        .book-footer {
            border-top: 1px solid var(--border);
            padding: var(--space-xl, 3rem) 1.5rem;
            text-align: center;
        }

        .book-footer__text {
            font-size: var(--text-sm);
            color: var(--text-subtle);
            margin-bottom: 0.5rem;
        }

        .book-footer__phone {
            font-size: var(--text-xs);
            color: var(--text-subtle);
        }

        .book-footer__phone a {
            color: inherit;
            text-decoration: none;
        }

        @media (max-width: 768px) {
            .intake-card__cta {
                text-align: center;
                justify-content: center;
            }
        }
    </style>
  </Fragment>

  <SkipLink />
  <HeaderUniversal />
  <AnnouncementBanner />

  <main class="book-page" id="main-content">
      <!-- Hero -->
      <section class="book-hero">
          <div class="container">
              <h1 class="book-hero__title">Start Here</h1>
              <p class="book-hero__subtitle">Every engagement begins with an intake — guided or self-guided — to ensure fit and clarity before we begin.</p>
              <p class="book-hero__reassurance">No commitment required. We'll review your responses and follow up with a clear recommendation.</p>
          </div>
      </section>

      <!-- Intake Options -->
      <section class="intake-section">
          <div class="container">
              <div class="intake-wrapper">
                  <div class="intake-section__header">
                      <p class="intake-section__label">Choose how to start</p>
                      <h2 class="intake-section__title">Three ways to begin</h2>
                  </div>

                  <div class="intake-grid">
                  <!-- Guided Intake (Recommended) -->
                  <div class="intake-card intake-card--recommended">
                      <span class="intake-card__badge">Recommended</span>
                      <svg class="intake-card__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                          <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                          <polyline points="14 2 14 8 20 8"/>
                          <line x1="16" y1="13" x2="8" y2="13"/>
                          <line x1="16" y1="17" x2="8" y2="17"/>
                          <polyline points="10 9 9 9 8 9"/>
                      </svg>
                      <h3 class="intake-card__title">Self-Guided Intake</h3>
                      <p class="intake-card__meta">5–10 min · Available 24/7</p>
                      <p class="intake-card__description">Answer a few questions about your business. We review within 1–2 business days and follow up with a clear recommendation.</p>
                      <div class="intake-card__footer">
                          <p class="intake-card__price intake-card__price--free">Free</p>
                          <a href="/intake/exploratory" class="intake-card__cta">Start Intake →</a>
                      </div>
                  </div>

                  <!-- Clarity Session -->
                  <div class="intake-card">
                      <svg class="intake-card__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                          <path d="M15 14c.2-1 .7-1.7 1.5-2.5 1-.9 1.5-2.2 1.5-3.5A6 6 0 0 0 6 8c0 1 .2 2.2 1.5 3.5.7.7 1.3 1.5 1.5 2.5"/>
                          <path d="M9 18h6"/>
                          <path d="M10 22h4"/>
                      </svg>
                      <h3 class="intake-card__title">Clarity Session</h3>
                      <p class="intake-card__meta">45 min · Live Video</p>
                      <p class="intake-card__description">A focused, paid conversation about your brand, website, or systems. Walk away with diagnosis, direction, and a short written recap.</p>
                      <div class="intake-card__footer">
                          <p class="intake-card__price">$145 <span>CAD + HST</span></p>
                          <a href="/clarity-session" class="intake-card__cta">Book Session →</a>
                      </div>
                  </div>

                  <!-- Phone Intake -->
                  <div class="intake-card">
                      <svg class="intake-card__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                          <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
                      </svg>
                      <h3 class="intake-card__title">Guided Intake by Phone</h3>
                      <p class="intake-card__meta">~10 min · Phone Call</p>
                      <p class="intake-card__description">Prefer talking? Call to share context about your business. We'll follow up with a recommendation based on the conversation.</p>
                      <div class="intake-card__footer">
                          <p class="intake-card__price intake-card__price--free">Free</p>
                          <a href="tel:+17054133705" class="intake-card__cta phone-link__mobile">Call Now →</a>
                          <span class="intake-card__cta intake-card__cta--static phone-link__desktop">Please call 705-413-3705</span>
                      </div>
                  </div>
                  </div>
              </div>
          </div>
      </section>

      <!-- Help Section -->
      <section class="book-help">
          <div class="container">
              <p class="book-help__text">Not sure which option to choose? The Guided Intake is the best starting point — it's free, takes 5 minutes, and we'll recommend the right path for you.</p>
              <a href="/exploratory" class="book-help__link">Learn more about our Conversation process →</a>
          </div>
      </section>

      <!-- Returning Client Note -->
      <section class="returning-client">
          <div class="container">
              <p class="returning-client__text">Already been routed? Check your email for your booking link.</p>
          </div>
      </section>
  </main>

  <!-- Footer -->
  <footer class="book-footer">
      <p class="book-footer__text">&copy; {currentYear} Bertrand Group</p>
      <p class="book-footer__phone"><a href="tel:+17054133705" class="phone-link__mobile">705-413-3705</a><span class="phone-link__desktop">705-413-3705</span></p>
  </footer>

  <VisitorNotify />

  <GesturePrevention />
</BaseLayout>
